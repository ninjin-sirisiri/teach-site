---
/**
 * ÂãïÁöÑ„É¨„ÉÉ„Çπ„É≥„Éö„Éº„Ç∏
 * getStaticPaths„Åß„É¨„ÉÉ„Çπ„É≥ID„ÇíÁîüÊàê
 * „É¨„ÉÉ„Çπ„É≥„Ç≥„É≥„ÉÜ„É≥„ÉÑ„ÄÅ„ÇØ„Ç§„Ç∫„ÄÅ„Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥„ÇíË°®Á§∫
 * Requirements: 3.2, 3.3
 */

import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../components/Layout.astro';
import Quiz from '../../components/Quiz.astro';
import type { Exercise } from '../../types/lesson';
import { getAllLessonIds, getNavItemById, TOTAL_LESSONS } from '../../data/navigation';

// ÈùôÁöÑ„Éë„Çπ„ÇíÁîüÊàê
export async function getStaticPaths() {
  const lessons = await getCollection('lessons');
  
  return lessons.map((lesson: CollectionEntry<'lessons'>) => ({
    params: { id: lesson.data.id },
    props: { lesson },
  }));
}

interface Props {
  lesson: CollectionEntry<'lessons'>;
}

const { lesson } = Astro.props;
const { id, title, description, content, exercises, category } = lesson.data;

// navigation.ts„Åã„ÇâÊ≠£„Åó„ÅÑ„É¨„ÉÉ„Çπ„É≥È†ÜÂ∫è„ÇíÂèñÂæó
const lessonOrder = getAllLessonIds();

const currentIndex = lessonOrder.indexOf(id);
const prevLessonId = currentIndex > 0 ? lessonOrder[currentIndex - 1] : null;
const nextLessonId = currentIndex < lessonOrder.length - 1 ? lessonOrder[currentIndex + 1] : null;

// „Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥„Ç¢„Ç§„ÉÜ„É†„Åã„Çâ„Çø„Ç§„Éà„É´„ÇíÂèñÂæó„Åô„Çã„Éò„É´„Éë„ÉºÈñ¢Êï∞
function getLessonTitle(lessonId: string): string {
  const navItem = getNavItemById(lessonId);
  return navItem?.label || lessonId;
}

const basePath = import.meta.env.BASE_URL || '/teach-site/';

// „Ç´„ÉÜ„Ç¥„É™„Éê„ÉÉ„Ç∏„ÅÆËâ≤„ÇíÂèñÂæó
const categoryColors: Record<string, string> = {
  intro: 'var(--color-intro)',
  html: 'var(--color-html)',
  css: 'var(--color-css)',
  js: 'var(--color-js)',
  ts: 'var(--color-ts)',
  git: 'var(--color-git)',
  react: 'var(--color-react)',
  tailwind: 'var(--color-tailwind)',
};
---

<Layout
  title={`${title} - Web Dev Learn`}
  description={description}
  currentLessonId={id}
  type="article"
>
  <article class="lesson-page">
    <!-- „É¨„ÉÉ„Çπ„É≥„Éò„ÉÉ„ÉÄ„Éº -->
    <header class="lesson-header">
      <div class="lesson-meta">
        <span class="lesson-badge" style={`background-color: ${categoryColors[category] || 'var(--color-primary)'}`}>
          {category.toUpperCase()}
        </span>
        <span class="lesson-number">
          Lesson {currentIndex + 1} / {TOTAL_LESSONS}
        </span>
      </div>
      <h1 class="lesson-title">{title}</h1>
      <p class="lesson-description">{description}</p>
    </header>

    <!-- „É¨„ÉÉ„Çπ„É≥„Ç≥„É≥„ÉÜ„É≥„ÉÑ -->
    <div class="lesson-content" set:html={content} />

    <!-- „ÇØ„Ç§„Ç∫„Çª„ÇØ„Ç∑„Éß„É≥ -->
    <Quiz exercises={exercises as Exercise[]} lessonId={id} />

    <!-- ÂÆå‰∫Ü„Éú„Çø„É≥ -->
    <div class="lesson-completion">
      <button 
        type="button" 
        class="completion-button" 
        id="completion-button"
        data-lesson-id={id}
      >
        <span class="completion-icon">‚úì</span>
        <span class="completion-text">„Åì„ÅÆ„É¨„ÉÉ„Çπ„É≥„ÇíÂÆå‰∫Ü„Å´„Åô„Çã</span>
      </button>
    </div>

    <!-- „Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥ -->
    <nav class="lesson-navigation">
      {prevLessonId ? (
        <a href={`${basePath}lessons/${prevLessonId}/`} class="nav-button prev">
          <span class="nav-arrow">‚Üê</span>
          <span class="nav-label">Ââç„ÅÆ„É¨„ÉÉ„Çπ„É≥</span>
          <span class="nav-title">{getLessonTitle(prevLessonId)}</span>
        </a>
      ) : (
        <div class="nav-button placeholder"></div>
      )}
      
      <a href={basePath} class="nav-button home">
        <span class="nav-icon">üè†</span>
        <span class="nav-label">„Éõ„Éº„É†„Å´Êàª„Çã</span>
      </a>
      
      {nextLessonId ? (
        <a href={`${basePath}lessons/${nextLessonId}/`} class="nav-button next">
          <span class="nav-label">Ê¨°„ÅÆ„É¨„ÉÉ„Çπ„É≥</span>
          <span class="nav-title">{getLessonTitle(nextLessonId)}</span>
          <span class="nav-arrow">‚Üí</span>
        </a>
      ) : (
        <div class="nav-button placeholder"></div>
      )}
    </nav>
  </article>
</Layout>

<script>
  import { setLastVisited, isLessonComplete, toggleLessonComplete } from '../../scripts/progress';

  function initLessonPage(): void {
    const completionButton = document.getElementById('completion-button') as HTMLButtonElement | null;
    
    if (!completionButton) return;
    
    const lessonId = completionButton.dataset.lessonId;
    if (!lessonId) return;

    // ÊúÄÂæå„Å´Ë®™Âïè„Åó„Åü„É¨„ÉÉ„Çπ„É≥„ÇíË®òÈå≤
    setLastVisited(lessonId);

    // ÂÆå‰∫ÜÁä∂ÊÖã„ÇíÂèçÊò†
    updateCompletionButton(lessonId, completionButton);

    // ÂÆå‰∫Ü„Éú„Çø„É≥„ÅÆ„ÇØ„É™„ÉÉ„ÇØ„Ç§„Éô„É≥„Éà
    completionButton.addEventListener('click', () => {
      const isComplete = toggleLessonComplete(lessonId);
      updateCompletionButton(lessonId, completionButton, isComplete);
      
      // „Çµ„Ç§„Éâ„Éê„Éº„ÅÆÂÆå‰∫Ü„Éû„Éº„ÇØ„ÇÇÊõ¥Êñ∞
      updateSidebarCompletion(lessonId, isComplete);
    });
  }

  function updateCompletionButton(
    lessonId: string, 
    button: HTMLButtonElement, 
    isComplete?: boolean
  ): void {
    const complete = isComplete ?? isLessonComplete(lessonId);
    const textEl = button.querySelector('.completion-text');
    
    if (complete) {
      button.classList.add('completed');
      if (textEl) textEl.textContent = 'ÂÆå‰∫ÜÊ∏à„Åø ‚úì';
    } else {
      button.classList.remove('completed');
      if (textEl) textEl.textContent = '„Åì„ÅÆ„É¨„ÉÉ„Çπ„É≥„ÇíÂÆå‰∫Ü„Å´„Åô„Çã';
    }
  }

  function updateSidebarCompletion(lessonId: string, isComplete: boolean): void {
    const completionMark = document.querySelector(`[data-completion-for="${lessonId}"]`);
    if (completionMark) {
      if (isComplete) {
        completionMark.textContent = '‚úì';
        completionMark.classList.add('completed');
      } else {
        completionMark.textContent = '';
        completionMark.classList.remove('completed');
      }
    }
  }

  // DOMContentLoaded„ÅßÂàùÊúüÂåñ
  document.addEventListener('DOMContentLoaded', initLessonPage);
  
  // Astro„ÅÆ„Éö„Éº„Ç∏ÈÅ∑ÁßªÊôÇ„Å´„ÇÇÂàùÊúüÂåñ
  document.addEventListener('astro:page-load', initLessonPage);
</script>

<style>
  .lesson-page {
